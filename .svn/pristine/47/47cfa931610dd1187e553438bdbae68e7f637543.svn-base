<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="14dp"
    android:paddingTop="10dp"
    android:paddingEnd="14dp"
    android:paddingBottom="40dp">

    <TextView
        android:id="@+id/send_message"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_live_send_message"
        android:padding="10dp"
        android:src="@drawable/icon_send_message"
        android:text="@string/label_live_send_message"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCloseLive"
            android:layout_width="120dp"
            android:layout_height="@dimen/dp30"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_btn_red_live"
            android:text="@string/end_live"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/gift"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/icon_live_gift" />

    </RelativeLayout>

</LinearLayout>
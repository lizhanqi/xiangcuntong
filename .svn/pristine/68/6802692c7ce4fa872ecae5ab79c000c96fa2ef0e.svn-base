<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_skin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bg_filter_select"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:visibility="visible">

    <Button
        android:id="@+id/original_filter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:singleLine="true"
        android:text="@string/filter_normal"
        android:textColor="@color/chat_background"
        android:textSize="@dimen/live_skin_size" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/color_white" />

    <Button
        android:id="@+id/beauty_filter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:singleLine="true"
        android:text="@string/filter_beauty"
        android:textColor="@color/chat_background"
        android:textSize="@dimen/live_skin_size"
        android:visibility="gone" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/color_white"
        android:visibility="gone" />

    <Button
        android:id="@+id/romance_filter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:singleLine="true"
        android:text="@string/filter_romance"
        android:textColor="@color/chat_background"
        android:textSize="@dimen/live_skin_size" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/color_white" />

    <Button
        android:id="@+id/warm_filter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:singleLine="true"
        android:text="@string/filter_warm"
        android:textColor="@color/chat_background"
        android:textSize="@dimen/live_skin_size" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/color_white" />

    <Button
        android:id="@+id/tender_filter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:singleLine="true"
        android:text="@string/filter_tender"
        android:textColor="@color/chat_background"
        android:textSize="@dimen/live_skin_size" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/color_white" />

    <Button
        android:id="@+id/sunrise_filter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:singleLine="true"
        android:text="@string/filter_sunrise"
        android:textColor="@color/chat_background"
        android:textSize="@dimen/live_skin_size" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/color_white" />

    <Button
        android:id="@+id/sunset_filter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:singleLine="true"
        android:text="@string/filter_sunset"
        android:textColor="@color/chat_background"
        android:textSize="@dimen/live_skin_size" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/color_white" />

    <Button
        android:id="@+id/cool_filter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:singleLine="true"
        android:text="@string/filter_cool"
        android:textColor="@color/chat_background"
        android:textSize="@dimen/live_skin_size" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/color_white" />

    <Button
        android:id="@+id/evergreen_filter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="SelectSkin"
        android:singleLine="true"
        android:text="@string/filter_evergreen"
        android:textColor="@color/chat_background"
        android:textSize="@dimen/live_skin_size" />

</LinearLayout>
